{
    "extends": "astro/tsconfigs/strictest",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "strict": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "$lib/*": ["./src/lib/*"],
            "$components/*": ["./src/components/*"],
            "$styles/*": ["./src/styles/*"],
            "$layouts/*": ["./src/layouts/*"],
            "$assets/*": ["./src/assets/*"],
            "$consts": ["./src/consts.ts"]
        }
    }
}
